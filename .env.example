# Vidscribe Environment Variables
# Copy this file to .env and set your values

# Hugging Face Authentication (required for MLX models on Apple Silicon)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here
# Alternative environment variable name (both are supported)
# HUGGINGFACE_TOKEN=your_huggingface_token_here

# Vidscribe Configuration (optional - overrides config file)
# Model settings
VIDSCRIBE_MODEL_SIZE=base
# VIDSCRIBE_MODEL_DEVICE=cpu  # or cuda for GPU

# Download settings
# VIDSCRIBE_DOWNLOAD_OUTPUT_DIR=~/Downloads/vidscribe
# VIDSCRIBE_DOWNLOAD_KEEP_FILES=false

# Output settings
# VIDSCRIBE_OUTPUT_FORMAT=text  # text, json, csv, srt, vtt
# VIDSCRIBE_OUTPUT_LANGUAGE=auto

# Logging settings
# VIDSCRIBE_LOGGING_LEVEL=INFO
# VIDSCRIBE_LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# MLX Settings (Apple Silicon only)
# VIDSCRIBE_USE_MLX=true  # Force enable/disable MLX